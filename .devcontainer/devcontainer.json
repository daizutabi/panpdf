{
  "name": "panpdf - VSCode Dev Container",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "TZ": "Asia/Tokyo"
  },
  "runArgs": ["--init"],
  "customizations": {
    "vscode": {
      "settings": {
        // "python.defaultInterpreterPath": ".venv/bin/python"

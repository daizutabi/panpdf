        //   "editor.codeActionsOnSave": {
        //     "source.fixAll": true
        //   }
        // }
      },
      "extensions": [
        "charliermarsh.ruff",
        "davidanson.vscode-markdownlint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "github.vscode-github-actions",
        "ms-python.vscode-pylance",
        "markis.code-coverage",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
